<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
>


    <bean id="t1000" class="ru.javabegin.RobotSpring.impls.robot.ModelT1000"
          p:hand-ref="toshibaHand" p:leg-ref="sonyLeg" p:head-ref="sonyHead" scope="prototype">

        <constructor-arg value="silver" index="0" type="java.lang.String"/>
        <constructor-arg value="2006" index="1" type="int"/>
        <constructor-arg value="true" index="2" type="boolean"/>
    </bean>


    <bean id="t1000Empty" class="ru.javabegin.RobotSpring.impls.robot.ModelT1000">

        <constructor-arg ref="sonyHand"/>
        <constructor-arg ref="sonyLeg"/>
        <constructor-arg ref="toshibaHead"/>
    </bean>

    <bean id="t1000_6" class="ru.javabegin.RobotSpring.impls.robot.ModelT1000"
          c:hand-ref="sonyHand"  c:leg-ref="sonyLeg" c:head-ref="toshibaHead"
          c:color="red" c:year="2013" c:soundEnabled="true">
    </bean>


    <bean id="sonyHand" class="ru.javabegin.RobotSpring.impls.sony.SonyHand"/>
    <bean id="sonyHead" class="ru.javabegin.RobotSpring.impls.sony.SonyHead" scope="prototype"/>
    <bean id="sonyLeg" class="ru.javabegin.RobotSpring.impls.sony.SonyLeg"/>

    <bean id="toshibaHand" class="ru.javabegin.RobotSpring.impls.toshiba.ToshibaHand"/>
    <bean id="toshibaHead" class="ru.javabegin.RobotSpring.impls.toshiba.ToshibaHead"/>
    <bean id="toshibaLeg" class="ru.javabegin.RobotSpring.impls.toshiba.ToshibaLeg"/>

</beans>
